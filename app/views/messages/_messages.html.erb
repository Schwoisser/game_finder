  <a class="p-2 flex flex-row dark_hover" href="/profile/<%= receiving_user.id %>" >
    <div class="flex flex-row" >
      <div class=" flex flex-col text-left" style="width:80px;" >
        <% if receiving_user.image.attached? %>
          <img style="border-radius: 100%; height: 30px; width: 30px;"  src="<%= (url_for(receiving_user.image)) %>" >

<div class="basic-box pl-3">
<br>

  <%= simple_form_for dev_note do |f| %>
    <div class="flex flex-row" style="max-width: 620px;" >
      <div class="basic_form" style="width: 40%;">
        <label class="basic_form_label">Title:</label> 
        <%= f.text_area :title, class:"basic-box-form-input" %>
      </div>
    </div>
    <div class="flex flex-row" style="max-width: 620px;" >
      <div class="basic_form" style="width: 40%;">
        <label class="basic_form_label">Intro:</label> 
        <%= f.text_area :intro, class:"basic-box-form-input" %>
      </div>
    </div>
    <div class="flex flex-row" style="max-width: 620px;" >
      <div class="basic_form" style="width: 40%;">
        <label class="basic_form_label">Text:</label> 
        <%= f.text_area :text, "rows" => 5, class:"basic-box-form-input" %>
      </div>
    </div>    
    <% if dev_note.image.attached? %>
      <img width="320" height="240" src="<%= (url_for(dev_note.image)) %>" >
    <% end %>
    <br>
    <label class="basic_form_label">Article Image:</label> 
    <%= f.file_field :image %><br>
    <br>
    <%= f.button :submit, class: "button-primary", :value=> 'Submit' %>
  <% end %>
</div>


<h1>Tournaments</h1>
<% Tournament.all.each do |tournament|%>
  <a href="<%= tournament_path(tournament) %>">
    <div class="rounded bg-gray-300 my-2 p-1.5 flex flex-col" style="color:black">

      <div class="flex flex-row justify-between">
        <div class="py-0.5"> <%= tournament.start_date.strftime("%d.%m.%y") %> </div>
        <div class="flex flex-row">
          <div class="mx-1 rounded bg-red-400 px-1 py-0.5"> <%= tournament.game.short_title%> </div>
          <div class="ml-1 py-0.5"> <%= tournament.users.size%>/<%= tournament.max_player_number%> </div>
        </div>
      </div>

      <div>
        <div> <%= tournament.title %> </div>
      </div>

      <div class="flex flex-row">
        <div class="mr-1"> <%= tournament.country.try(:name) %> </div>
        <div class="mx-1"> <%= tournament.zip_code %> </div>
        <div class="ml-1"> <%= tournament.city %> </div>
      </div>      

      <!-- <%= tournament.end_date %><br> -->

    </div>
  </a>

  

<% end %>

<%= link_to "Create New Tournament", new_tournament_path %>